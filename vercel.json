{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff2?|eot|ttf|otf|html))",
      "dest": "/frontend/$1"
    },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
