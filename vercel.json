{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/about", "dest": "/about.html" },
    { "src": "/projects", "dest": "/projects.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/index.html" },
    { "src": "/404", "dest": "/404.html" }
  ]
}
