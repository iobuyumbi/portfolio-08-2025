{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/about", "dest": "frontend/about.html" },
    { "src": "/projects", "dest": "frontend/projects.html" },
    { "src": "/contact", "dest": "frontend/contact.html" },
    { "src": "/", "dest": "frontend/index.html" },
    { "src": "/404", "dest": "frontend/404.html" },
    { "src": "/(.*)", "dest": "frontend/404.html" }
  ]
}
